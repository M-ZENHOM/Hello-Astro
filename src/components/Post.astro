---
import { type CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
---

<article class="space-y-5">
  <a href={`/blog/${post.slug}`}>
    <h2 class="text-2xl md:text-3xl font-extrabold underline">
      {post.data.title}
    </h2>
  </a>
  <p class="line-clamp-2 text-zinc-500 text-xl">{post.data.description}</p>
</article>
